-- Roblox Executor Script: Teleport Ball to Player with Button

local Players = game:GetService("Players")
local player = Players.LocalPlayer
local char = player.Character or player.CharacterAdded:Wait()
local hrp = char:WaitForChild("HumanoidRootPart")

-- Ball reference
local ballName = "Ball"

-- Remove existing GUI if it somehow exists
if player.PlayerGui:FindFirstChild("BallTeleportGui") then
	player.PlayerGui.BallTeleportGui:Destroy()
end

-- Create GUI
local screenGui = Instance.new("ScreenGui")
screenGui.Name = "BallTeleportGui"
screenGui.ResetOnSpawn = false
screenGui.Parent = player:WaitForChild("PlayerGui")

local teleportBtn = Instance.new("TextButton")
teleportBtn.Name = "TeleportBallButton"
teleportBtn.Size = UDim2.new(0.2, 0, 0.1, 0)
teleportBtn.Position = UDim2.new(0.75, 0, 0.58, 0)
teleportBtn.Text = "Get Ball"
teleportBtn.BackgroundColor3 = Color3.fromRGB(80, 255, 150)
teleportBtn.TextColor3 = Color3.new(1, 1, 1)
teleportBtn.TextScaled = true
teleportBtn.Font = Enum.Font.GothamBold
teleportBtn.BorderSizePixel = 0
teleportBtn.Parent = screenGui

-- Rounded corners
local uicorner = Instance.new("UICorner")
uicorner.CornerRadius = UDim.new(0.2, 0)
uicorner.Parent = teleportBtn

-- Teleport function
local function teleportBall()
	local ball = workspace:FindFirstChild(ballName)
	if ball and ball:IsA("BasePart") then
		local offset = hrp.CFrame.LookVector * 3
		ball.CFrame = hrp.CFrame + offset + Vector3.new(0, 1, 0)
		ball.Velocity = Vector3.zero
	else
		warn("No ball named '" .. ballName .. "' found!")
	end
end

-- Connect button to function
teleportBtn.MouseButton1Click:Connect(teleportBall)
